<h1 class=container>Lists#show</h1>
<br>

<h3 class=m-2> <%= @list.name %> </h3>
<br>

<% @list.bookmarks.each do |bookmark| %>
  <p class=m-2> <%= bookmark.comment %>
    <%= link_to "Delete", bookmark_path(bookmark),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
  </p>
<% end %>
<br>

<%= link_to "Create a bookmark", new_list_bookmark_path(@list) %>
<br>
<%= link_to "Back to lists", lists_path %>
